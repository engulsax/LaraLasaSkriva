<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/letter_drop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="70dp"
    android:minHeight="95dp"
    android:background="@drawable/word_background"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">

    <TextView
        android:id="@+id/letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/shakey_hand"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="0.2"
        android:textSize="@dimen/mega_text"
        app:layout_constraintBottom_toBottomOf="@id/letter_drop"
        app:layout_constraintEnd_toEndOf="@id/letter_drop"
        app:layout_constraintStart_toStartOf="@id/letter_drop"
        app:layout_constraintTop_toTopOf="@id/letter_drop" />

</androidx.constraintlayout.widget.ConstraintLayout>
